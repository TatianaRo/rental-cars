<%= link_to 'Voltar', root_path %> |

<%= link_to 'Registrar um novo carro para a frota', new_car_path %>

<h1>Carros</h1>

<% @cars.each do |car|%>
  <div>
    <h3><%= link_to car.car_model.name, car_path(id: car.id)%><h3> 
      <ul>
         <li><%= car.car_model.year %></li>
         <li><%= car.color %></li>       
      </ul>
  </div>
<% end %>


<% if @cars.empty? %>
  <h3>Nenhum carro cadastrado</h3>
<% end %>