<ul>
  <% @rental.errors.full_messages.each do |message| %>
     <li><%= message %></li>
  <% end %>
</ul>


<%= form_with model: @rental, local:true do |f| %>
  <div>
    <%= f.label :start_date, 'Data de início' %>
    <%= f.date_field :start_date %>
  </div>
  

  <div>
    <%= f.label :end_date, 'Data de término' %>
    <%= f.date_field :end_date %>
  </div>
  
  <div>
    <%= f.label :costumer_id, 'Cliente' %>
    <%= f.collection_select :costumer_id, @costumers, :id, :information, prompt: 'Escolha o cliente' %>  
  </div>
  
  <div>
    <%= f.label :car_category_id, 'Categoria de carro' %>
    <%= f.collection_select :car_category_id, @car_categories, :id, :name, prompt: 'Escolha a categoria' %>  
  </div>
  
  <%= f.submit 'Agendar'%>
<%end%>