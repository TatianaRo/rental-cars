<%= link_to 'Voltar', root_path %> |

<%= link_to 'Registrar um modelo de carro', new_car_model_path %>

<h1>Modelos de carro</h1>

<% @car_models.each do |car_model|%>
  <div>
    <h3><%= link_to "#{car_model.name} - #{car_model.year}", car_model %><h3> 
      <ul>
        <li><%= car_model.manufacturer %></li>
        <li><%= car_model.car_category.name %></li>
      </ul>
  </div>
<% end %>


<% if @car_models.empty? %>
  <h3>Nenhum modelo cadastrado</h3>
<% end %>